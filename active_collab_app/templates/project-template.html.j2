<html>
<head>
    <meta charset="utf-8">
    <title>Project {{ project_number }}</title>
    <link rel="stylesheet" href="print.css" media="all">

</head>
<body>
<a href="index.html">index</a>
<p></p>
<h1>Project No. {{ project_number }} {% if completed_on %} - Completed on: {{ completed_on }} {% endif %}</h1>
<h2>{{ name }}</h2>
<p>{{ body_formatted|safe }}</p>
<table>
    <tr>
        <td>Project ID (internal)</td>
        <td>{{ id }}</td>
    </tr>
    <tr>
        <td>Client Company</td>
        <td>{{ company_id }} - {{ client_company.name }} (is owner: {{ client_company.is_owner }})</td>
    </tr>
    <tr>
        <td>category_id</td>
        <td>{{ category_id }} {% if category %} - {{ category.name }} {% endif %}</td>
    </tr>
    <tr>
        <td>label_id</td>
        <td>{{ label_id }} {% if label %} - {{ label.name }} {% endif %}</td>
    </tr>
    <tr>
        <td>updated_on</td>
        <td>{{ updated_on }}</td>
    </tr>
    <tr>
        <td>Project Email</td>
        <td>{{ email }}</td>
    </tr>

    <tr>
        <td>Created</td>
        <td>{{ created_by_name }} &lt;<a href="mailto:{{ created_by_email }}">{{ created_by_email }}</a>&gt; {{ created_on }}</td>
    </tr>
    <tr>
        <td>Completed</td>
        <td>{{ completed_by_name }} &lt;<a href="mailto:{{ completed_by_email }}">{{ completed_by_email }}</a>&gt; {{ completed_on }}</td>
    </tr>
    <tr>
        <td>Trashed on</td>
        <td>{{ trashed_on }}</td>
    </tr>

</table>

<h3>Attachments:</h3>
<ul>
    <li>Attachment 1</li>
</ul>

<h3>Members:</h3>

<ul>
    <li>{{ members }}</li>
</ul>

<h3>Tasks:</h3>

<ul>
    {% for task in tasks %}
    <ul>
        <li class="{% if task.is_completed %}completed{% endif %} {% if task.is_important %}important{% endif %}">
            <input type="checkbox" disabled {% if task.is_completed %}checked{% endif %}/>
            <a href="{{ "task-%08d.html" % task.id }}">
                #{{ task.task_number }}&nbsp;-&nbsp;{{ task.name }} {% if task.is_important %}‼️{% endif %} {% if task.is_completed %} - ☑️ {{ task.completed_on }} {% endif %}
            </a>
        </li>
    {% else %}
        <i>No tasks</i>
    {% endfor %}
</ul>

<hr>
<div class="footer">
    page created {{ now|as_datetime }}
</div>
</body>
</html>
